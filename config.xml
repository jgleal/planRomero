<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "es.juntadeandalucia.mapea4.planromero16"
		versionCode = "503"
	    CFBundleVersion = "5.0.3"
		version     = "5.0.3" >
	<!-- CFBundleVersion not working -->
	<!--<edit-config target="CFBundleVersionString" file="*-Info.plist" mode="overwrite">  
    		<string>5.0.1</string>  
 	 </edit-config>-->
	<name>Plan Romero</name>
	<description>
		Plan Romero
	</description>
	<author email="l-dirsigc.chap@juntadeandalucia.es" href="http://www.juntadeandalucia.es">
		Junta de Andalucía
	</author>
	<content src="index.html" />
	<access origin="*" />
	<access origin="tel:*" launch-external="yes"/>
	<access origin="geo:*" launch-external="yes"/>
	<access origin="maps:*" launch-external="yes"/>
	<access origin="mailto:*" launch-external="yes"/>

	<preference name="android-minSdkVersion" value="23"/>
	<preference name="android-targetSdkVersion" value="26"/>
	<preference name="SuppressesIncrementalRendering" value="true"/>    <!-- aumenta rendimiento en iOS -->
	<feature name="StatusBar">
		<param name="ios-package" value="CDVStatusBar" onload="true"/>
	</feature>

	<!-- PERMISOS -->
	<preference name="permissions" value="none"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- PLUGINS -->
	<plugin name="cordova-plugin-dialogs" source="npm" version="2.0.1" />
	<plugin name="cordova-plugin-geolocation" source="npm" version="4.0.1" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" version="3.0.0" />
	<plugin name="cordova-plugin-splashscreen" source="npm" version="5.0.2" />
	<plugin name="cordova-plugin-statusbar" source="npm" version="2.4.2" />		
	<plugin name="cordova-plugin-whitelist" source="npm" version="1.3.3" />
	
	<!-- CONFIGURACIONES GÉNÉRICAS -->
	<preference name="SplashScreen" value="screen" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="8000" />
	<preference name="FadeSplashScreen" value="false" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="SuppressesLongPressGesture" value="true" />
	<preference name="Orientation" value="portrait" />
	<preference name="phonegap-version" value="cli-8.1.1" />

	<platform name="android">
        <preference name="android-installLocation" value="auto" />
		<icon src="resources/android/icon/drawable-xxxhdpi.png" density="xxxhdpi" />
		<icon src="resources/android/icon/drawable-xxhdpi.png" density="xxhdpi" />
		<icon src="resources/android/icon/drawable-xhdpi.png" density="xhdpi" />
		<icon src="resources/android/icon/drawable-hdpi.png" density="hdpi" />
		<icon src="resources/android/icon/drawable-mdpi.png" density="mdpi" />
		<icon src="resources/android/icon/drawable-ldpi.png" density="ldpi" />		
		<splash src="resources/android/splash/drawable-port-ldpi.png" density="port-ldpi" />
		<splash src="resources/android/splash/drawable-port-mdpi.png" density="port-mdpi" />
		<splash src="resources/android/splash/drawable-port-hdpi.png" density="port-hdpi" />
		<splash src="resources/android/splash/drawable-port-xhdpi.png" density="port-xhdpi" />
		<splash src="resources/android/splash/drawable-port-xxhdpi.png" density="port-xxhdpi" />
		<splash src="resources/android/splash/drawable-port-xxxhdpi.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <preference name="target-device" value="handset" />
		<edit-config target="UIStatusBarHidden" file="*-Info.plist" mode="merge">
			<true/>
		</edit-config>
		<edit-config target="UIViewControllerBasedStatusBarAppearance" file="*-Info.plist" mode="merge">
			<false/>
		</edit-config>
		<edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
			<string>Se necesita acceso a la ubicación del dispositivo para establecer la posición respecto a las carretas de las hermandades y mostrarla en el mapa</string>
		</edit-config>
	        <edit-config target="NSLocationAlwaysUsageDescription" file="*-Info.plist" mode="merge">
			<string>Se necesita acceso a la ubicación del dispositivo para establecer la posición respecto a las carretas de las hermandades y mostrarla en el mapa</string>
		</edit-config>
        <icon src="resources/ios/icon/icon.png" width="57" height="57"/>
        <icon src="resources/ios/icon/icon@2x.png" width="114" height="114"/>
        <icon src="resources/ios/icon/icon-40.png" width="40" height="40"/>
        <icon src="resources/ios/icon/icon-40@2x.png" width="80" height="80"/>
        <icon src="resources/ios/icon/icon-50.png" width="50" height="50"/>
        <icon src="resources/ios/icon/icon-50@2x.png" width="100" height="100"/>
        <icon src="resources/ios/icon/icon-60.png" width="60" height="60"/>
        <icon src="resources/ios/icon/icon-60@2x.png" width="120" height="120"/>
        <icon src="resources/ios/icon/icon-60@3x.png" width="180" height="180"/>
        <icon src="resources/ios/icon/icon-72.png" width="72" height="72"/>
        <icon src="resources/ios/icon/icon-72@2x.png" width="144" height="144"/>
        <icon src="resources/ios/icon/icon-76.png" width="76" height="76"/>
        <icon src="resources/ios/icon/icon-76@2x.png" width="152" height="152"/>
        <icon src="resources/ios/icon/icon-small.png" width="29" height="29"/>
        <icon src="resources/ios/icon/icon-small@2x.png" width="58" height="58"/>
        <icon src="resources/ios/icon/icon-small@3x.png" width="87" height="87"/>
        <splash src="resources/ios/splash/Default-568h@2x.png" width="640" height="1136"/>
        <splash src="resources/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="resources/ios/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="resources/ios/splash/Default@2x.png" width="640" height="960"/>
        <splash src="resources/ios/splash/Default.png" width="320" height="480"/>
		<splash src="resources/ios/splash/Default-Portrait-1792h@2x.png" width="828" height="1792"/>
		<splash src="resources/ios/splash/Default-Portrait-2436h@3x.png" width="1125" height="2436"/>
		<splash src="resources/ios/splash/Default-Portrait-2688h@3x.png" width="1242" height="2688"/>		
    </platform>
</widget>
